@using FMASolutionsCore.Web.ShopBro
@model FMASolutionsCore.Web.ShopBro.ViewModels.AddressLocationViewModel
@{
    ViewData["Title"] = "Address Location - View Page";
    Layout = "~/Views/Shared/_LayoutShopBro.cshtml";
}

<div class="container rounded">
    <form class="form-signin">
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    <h3>Address Location Details:</h3>            
                </div>        
            </div>
        </div>
        @if (Model != null && Model.StatusErrorMessage != null)
        {
            <Label class="error-text">@Model.StatusErrorMessage </Label>
        }
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">                    
                    Address Location ID: @Html.TextBoxFor(model => model.AddressLocationID, new { ReadOnly="true", Class="form-control mb-2"})               
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    Address Location Code: @Html.TextBoxFor(model => model.AddressLocationCode, new { ReadOnly="true", Class="form-control mb-2"})               
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    Address Line 1: @Html.TextBoxFor(model => model.AddressLine1, new { ReadOnly="true", Class="form-control mb-2"})                
                </div>
            </div>  
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    Address Line 2: @Html.TextBoxFor(model => model.AddressLine2, new { ReadOnly="true", Class="form-control mb-2"})                
                </div>
            </div>  
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">                    
                    City Area: @Html.TextBoxFor(model => model.AvailableCityAreas[Model.CityAreaID], new { ReadOnly="true", Class="form-control mb-2"})
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">                    
                    City Area: @Html.TextBoxFor(model => model.AvailablePostCodes[Model.PostCodeID], new { ReadOnly="true", Class="form-control mb-2"})
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">                    
                    @Html.TextBoxFor(model => model.CityAreaID, new { ReadOnly="true", Class="form-control mb-2", style="display: none"})               
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">                    
                    @Html.TextBoxFor(model => model.PostCodeID, new { ReadOnly="true", Class="form-control mb-2", style="display: none"})               
                </div>
            </div>
        </div>
         <div class="row">
            <div class="col-sm-4"><button type="submit" formaction=@Url.Action("DisplayForUpdate") formmethod="POST" class="btn btn-outline-dark btn-block mb-3">Update</button></div>            
            <div class="col-sm-4"><a href="/AddressLocation" class="btn btn-outline-dark btn-block mb-3">Back</a></button></div>
        </div>        
    </form>
</div>

