@using FMASolutionsCore.Web.ShopBro
@model FMASolutionsCore.Web.ShopBro.ViewModels.AddressLocationViewModel
@{
    ViewData["Title"] = "Address Location - Create Page";
    Layout = "~/Views/Shared/_LayoutShopBro.cshtml";
}

<div class="container rounded">
    <form class="form-signin">
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    <h3>Create An Address Location</h3>            
                </div>        
            </div>
        </div>
        @if (Model != null && Model.StatusErrorMessage != null)
        {
            <Label class="error-text">@Model.StatusErrorMessage </Label>
        }
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    Address Location Code: @Html.TextBoxFor(model => model.AddressLocationCode, new { placeholder = "Address Location Code", Class="form-control mb-2"})
                    @Html.ValidationMessageFor(model => model.AddressLocationCode, "", new { Class = "error-text" })                  
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    Address Line 1: @Html.TextBoxFor(model => model.AddressLine1, new { placeholder = "Address Line 1", Class="form-control mb-2"})
                    @Html.ValidationMessageFor(model => model.AddressLine1, "", new { Class = "error-text" })        
                </div>
            </div>  
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    Address Line 2: @Html.TextBoxFor(model => model.AddressLine2, new { placeholder = "Address Line 2", Class="form-control mb-2"})
                    @Html.ValidationMessageFor(model => model.AddressLine2, "", new { Class = "error-text" })        
                </div>
            </div>  
        </div>     
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    City Area: 
                    @Html.DropDownListFor(
                        m => m.CityAreaID,
                        new SelectList(Model.AvailableCityAreas, "Key", "Value"),
                        "- Select City Area -",
                        new { @class = "form-control" } 
                    )
                </div>
            </div>
        </div>
         <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    Use Existing Postcode: @Html.CheckBoxFor(m => m.postCodeFromDB, new {Class="mt-2", id="SubCheckBox", onclick="toggleVisability('SubCheckBox','SelectFromDB','CreateNew')"})                    
                </div>
            </div>
        </div>
        <div class="row" id="SelectFromDB">
            <div class="col-sm-12">
                <div class="text-left">
                    Post Code: 
                    @Html.DropDownListFor(
                        m => m.PostCodeID,
                        new SelectList(Model.AvailablePostCodes, "Key", "Value"),
                        "- Select Post Code -",
                        new { @class = "form-control" } 
                    )
                </div>
            </div>
        </div>
        <div class="row" id="CreateNew" style="display: none;">
            <div class="col-sm-12">
                <div class="text-left">
                    Postcode Code: @Html.TextBoxFor(model => model.postCodeToCreate.PostCodeCode, new { placeholder = "Postcode Code", Class="form-control mb-2"})
                    @Html.ValidationMessageFor(model => model.postCodeToCreate.PostCodeCode, "", new { Class = "error-text" })
                </div>
            </div>
            <div class="col-sm-12">
                <div class="text-left">
                    City: 
                    @Html.DropDownListFor(
                        m => m.postCodeToCreate.CityID,
                        new SelectList(Model.postCodeToCreate.AvailableCities, "Key", "Value"),
                        "- Select City -",
                        new { @class = "form-control" } 
                    )
                </div>
            </div>
            <div class="col-sm-12">
                <div class="text-left">
                    Postcode Value: @Html.TextBoxFor(model => model.postCodeToCreate.PostCodeValue, new { placeholder = "Post Code Value", Class="form-control mb-2"})
                    @Html.ValidationMessageFor(model => model.postCodeToCreate.PostCodeValue, "", new { Class = "error-text" })
                </div>
            </div>  
        </div>
         <div class="row">
            <div class="col-sm-6"><button type="submit" formaction=@Url.Action("Create") formmethod="POST" class="btn btn-outline-dark btn-block mb-3">Create</button></div>            
            <div class="col-sm-6"><a href="/AddressLocation" class="btn btn-outline-dark btn-block mb-3">Back</a></button></div>            
        </div>        
    </form>
</div>

