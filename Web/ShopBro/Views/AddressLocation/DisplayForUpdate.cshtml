@using FMASolutionsCore.Web.ShopBro
@model FMASolutionsCore.Web.ShopBro.ViewModels.AddressLocationViewModel
@{
    ViewData["Title"] = "Address Location - Update Page";
    Layout = "~/Views/Shared/_LayoutShopBro.cshtml";
}

<div class="container rounded">
    <form class="form-signin">
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    <h3>Address Location Details:</h3>            
                </div>        
            </div>
        </div>
        @if (Model != null && Model.StatusMessage != null)
        {
            <Label class="error-text">@Model.StatusMessage </Label>
        }
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">                    
                    Address Location ID: @Html.TextBoxFor(model => model.AddressLocationID, new { ReadOnly="true", Class="form-control mb-2"})
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    Address Location Code: @Html.TextBoxFor(model => model.AddressLocationCode, new { placeholder = "Address Location Code", Class="form-control mb-2"})
               </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    Address Line 1: @Html.TextBoxFor(model => model.AddressLine1, new { placeholder = "Address Line 1", Class="form-control mb-2"})
                </div>
            </div>  
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    Address Line 2: @Html.TextBoxFor(model => model.AddressLine2, new { placeholder = "Address Line 2", Class="form-control mb-2"})
                </div>
            </div>  
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    City Area: 
                    @Html.DropDownListFor(
                        m => m.CityAreaID,
                        new SelectList(Model.AvailableCityAreas, "Key", "Value",Model.CityAreaID),
                        new { @class = "form-control" } 
                    )
                    @Html.ValidationMessageFor(model => model.CityAreaID, "", new { Class = "error-text" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    Post Code: 
                    @Html.DropDownListFor(
                        m => m.PostCodeID,
                        new SelectList(Model.AvailablePostCodes, "Key", "Value",Model.PostCodeID),
                        new { @class = "form-control" } 
                    )
                    @Html.ValidationMessageFor(model => model.PostCodeID, "", new { Class = "error-text" })
                </div>
            </div>
        </div>
         <div class="row">
            <div class="col-sm-4"><button type="submit" formaction=@Url.Action("Update") formmethod="POST" class="btn btn-outline-dark btn-block mb-3">Process Update</button></div>                   
            <div class="col-sm-4"><a href="/AddressLocation/Search/@Model.AddressLocationID" class="btn btn-outline-dark btn-block mb-3">Back</a></button></div>
        </div>
    </form>
</div>