@using FMASolutionsCore.Web.ShopBro
@model FMASolutionsCore.Web.ShopBro.ViewModels.PostCodeViewModel
@{
    ViewData["Title"] = "Post Code - Create Page";
    Layout = "~/Views/Shared/_LayoutShopBro.cshtml";
}

<div class="container rounded">
    <form class="form-signin">
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    <h3>Create A Post Code</h3>            
                </div>        
            </div>
        </div>
        @if (Model != null && Model.StatusMessage != null)
        {
            <Label class="error-text">@Model.StatusMessage </Label>
        }
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    Postcode Code: @Html.TextBoxFor(model => model.PostCodeCode, new { placeholder = "Postcode Code", Class="form-control mb-2"})   
                </div>
            </div>
        </div>     
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    City: 
                    @Html.DropDownListFor(
                        m => m.CityID,
                        new SelectList(Model.AvailableCities, "Key", "Value"),
                        "- Select City -",
                        new { @class = "form-control" } 
                    )
                    @Html.ValidationMessageFor(model => model.CityID, "", new { Class = "error-text" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    Postcode Value: @Html.TextBoxFor(model => model.PostCodeValue, new { placeholder = "Post Code Value", Class="form-control mb-2"}) 
                </div>
            </div>  
        </div>
         <div class="row">
            <div class="col-sm-6"><button type="submit" formaction=@Url.Action("Create") formmethod="POST" class="btn btn-outline-dark btn-block mb-3">Create</button></div>            
            <div class="col-sm-6"><a href="/PostCode" class="btn btn-outline-dark btn-block mb-3">Back</a></button></div>            
        </div>        
    </form>
</div>

