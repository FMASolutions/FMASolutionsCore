@using FMASolutionsCore.Web.ShopBro
@model FMASolutionsCore.Web.ShopBro.ViewModels.PostCodeViewModel
@{
    ViewData["Title"] = "Post Code - View Page";
    Layout = "~/Views/Shared/_LayoutShopBro.cshtml";
}

<div class="container rounded">
    <form class="form-signin">
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    <h3>Postcode Details:</h3>            
                </div>        
            </div>
        </div>
        @if (Model != null && Model.StatusErrorMessage != null)
        {
            <Label class="error-text">@Model.StatusErrorMessage </Label>
        }
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">                    
                    Postcode ID: @Html.TextBoxFor(model => model.PostCodeID, new { ReadOnly="true", Class="form-control mb-2"})               
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    Postcode Code: @Html.TextBoxFor(model => model.PostCodeCode, new { ReadOnly="true", Class="form-control mb-2"})               
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">                    
                    City: @Html.TextBoxFor(model => model.AvailableCities[Model.CityID], new { ReadOnly="true", Class="form-control mb-2"})
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">                    
                    @Html.TextBoxFor(model => model.CityID, new { ReadOnly="true", Class="form-control mb-2", style="display: none"})               
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    Postcode Value: @Html.TextBoxFor(model => model.PostCodeValue, new { ReadOnly="true", Class="form-control mb-2"})                
                </div>
            </div>  
        </div>
         <div class="row">
            <div class="col-sm-4"><button type="submit" formaction=@Url.Action("DisplayForUpdate") formmethod="POST" class="btn btn-outline-dark btn-block mb-3">Update</button></div>            
            <div class="col-sm-4"><a href="/PostCode" class="btn btn-outline-dark btn-block mb-3">Back</a></button></div>
        </div>        
    </form>
</div>

