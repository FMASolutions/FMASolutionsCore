@using FMASolutionsCore.Web.ShopBro
@model FMASolutionsCore.Web.ShopBro.ViewModels.DeliveryNoteViewModel
@{
    ViewData["Title"] = "Item - Search";
    Layout = "~/Views/Shared/_LayoutShopBro.cshtml";
}

<div class="container rounded">
    <form class="form-signin">
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    <h3>Delivery Note:</h3>            
                </div>        
            </div>
        </div>
        @if (Model != null && Model.StatusMessage != null)
        {
            <Label class="error-text">@Model.StatusMessage </Label>
        }

        <div class="row">
            <div class="col-sm-6">
                <div class="text-left">                      
                    TITLE: @Html.TextBoxFor(model => model.Title, new { Class="form-control mb-2"})                    
                </div>
            </div>
        </div>
         <div class="row">
            <div class="col-sm-3"><a href="/Order/Search" class="btn btn-outline-dark btn-block mb-3">Back</a></div>
        </div>        
    </form>
</div>