@using FMASolutionsCore.Web.ShopBro
@model FMASolutionsCore.Web.ShopBro.ViewModels.DisplayOrdersViewModel
@{
    ViewData["Title"] = "Items - Update Page";
    Layout = "~/Views/Shared/_LayoutShopBro.cshtml";
}

<div class="container bg-light pt-2 pb-2">
    <form class="form-signin">
        @if (Model != null && Model.StatusMessage != null)
        {
            <Label class="error-text">@Model.StatusMessage </Label>
        }
        <h3 class="pl-2">Current Orders:</h3>
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">                                    
                    <table class="table table-striped table-dark" id="DisplayAllTable">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Status</th>
                                <th>Customer</th>
                                <th>Order Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var order in @Model.Orders)
                            {
                                <tr>
                                    <td>@order.OrderID</td>
                                    <td>@order.OrderStatus</td>
                                    <td>@order.Customer</td>
                                    <td>@order.OrderDate</td>                                
                                </tr>
                                <tr>
                                    <td colspan="4"><a href="/Order/Search/@order.OrderID" class="btn btn-outline-light btn-block mb-3">View Order @order.OrderID</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>                
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <a href="/Order/Search" class="btn btn-outline-dark btn-block mb-3">Back</a>
            </div>
        </div>
    </form>
</div>