@using FMASolutionsCore.Web.ShopBro
@model FMASolutionsCore.Web.ShopBro.ViewModels.ProductGroupSearchViewModel
@{
    ViewData["Title"] = "Product Group - Search";
    Layout = "~/Views/Shared/_LayoutShopBro.cshtml";
}

<div class="container rounded">
    <form class="form-signin">
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    <h3>Product Group Search:</h3>            
                </div>        
            </div>
        </div>
        @if (Model != null && Model.StatusErrorMessage != null)
        {
            <Label class="error-text">@Model.StatusErrorMessage </Label>
        }

        <div class="row">
            <div class="col-sm-6">
                <div class="text-left">                      
                    Product Group ID: @Html.TextBoxFor(model => model.ProductGroupID, new { placeholder = "Product Group ID", Class="form-control mb-2"})                    
                </div>
            </div>
            <div class="col-sm-6">
                <div class="text-left">                      
                    Product Group Code: @Html.TextBoxFor(model => model.ProductGroupCode, new { placeholder = "Product Group Code", Class="form-control mb-2"})                    
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="text-left">                                          
                    @Html.ValidationMessageFor(model => model.ProductGroupID, "", new { Class = "error-text" })                  
                </div>
            </div>
            <div class="col-sm-6">
                <div class="text-left">                                          
                    @Html.ValidationMessageFor(model => model.ProductGroupCode, "", new { Class = "error-text" })                                 
                </div>
            </div>
        </div>
         <div class="row">
            <div class="col-sm-3"><button type="submit" formaction=@Url.Action("ProcessSearch") formmethod="POST" class="btn btn-outline-dark btn-block mb-3">Search</button></div>
            <div class="col-sm-3"><button type="submit" formaction=@Url.Action("DisplayAll") formmethod="GET" class="btn btn-outline-dark btn-block mb-3">View All</button></div>
            <div class="col-sm-3"><button type="submit" formaction=@Url.Action("Create") formmethod="GET" class="btn btn-outline-dark btn-block mb-3">Create</button></div>
            <div class="col-sm-3"><a href="/AdminPanel" class="btn btn-outline-dark btn-block mb-3">Back</a></div>
        </div>        
    </form>
</div>

