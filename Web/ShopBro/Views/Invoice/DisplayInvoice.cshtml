@using FMASolutionsCore.Web.ShopBro
@model FMASolutionsCore.Web.ShopBro.ViewModels.DisplayInvoiceViewModel
@{
    ViewData["Title"] = "Invoice";
    Layout = "~/Views/Shared/_LayoutShopBro.cshtml";
}

<div class="container rounded">
    <form class="form-signin">
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    <h3>Invoice: @Model.InvoiceItems[0].InvoiceID</h3>
                    <h3>Invoice Date: @Model.InvoiceItems[0].InvoiceDate</h3>            
                </div>        
            </div>
        </div>
        @if (Model != null && Model.StatusMessage != null)
        {
            <Label class="error-text">@Model.StatusMessage </Label>
        }
        <table class="table table-striped table-dark" id="InvoiceItems">
            <thead>
                <tr>
                    <th>Item Description</th>
                    <th>Qty</th>
                    <th>Item Price</th>
                    <th>Item Total</th>
                </tr>
            </thead>
            <tbody>        
        @foreach(var item in Model.InvoiceItems)
        {
            <tr>
                <td>@item.ItemDescription</td>
                <td>@item.ItemQty</td>                
                <td>@item.ItemPrice</td>
                <td>@item.ItemTotal</td>
            </tr>           
        }
            <tr>
                <td></td>
                <td></td>
                <th>Grand Total:</th>
                <td>@Model.InvoiceTotal</td>
            </tr>
         <div class="row">
            <div class="col-sm-3"><a href="/Order/Search/@Model.InvoiceItems[0].OrderHeaderID" class="btn btn-outline-dark btn-block mb-3">Back</a></div>
        </div>        
    </form>
</div>