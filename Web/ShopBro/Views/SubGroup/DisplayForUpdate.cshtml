@using FMASolutionsCore.Web.ShopBro
@model FMASolutionsCore.Web.ShopBro.ViewModels.SubGroupViewModel
@{
    ViewData["Title"] = "Sub Group - Update Page";
    Layout = "~/Views/Shared/_LayoutShopBro.cshtml";
}

<div class="container rounded">
    <form class="form-signin">
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    <h3>Sub Group Details:</h3>            
                </div>        
            </div>
        </div>
        @if (Model != null && Model.StatusErrorMessage != null)
        {
            <Label class="error-text">@Model.StatusErrorMessage </Label>
        }
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">                    
                    SubGroup ID: @Html.TextBoxFor(model => model.SubGroupID, new { ReadOnly="true", Class="form-control mb-2"})
                    @Html.ValidationMessageFor(model => model.SubGroupID, "", new { Class = "error-text" })                  
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    SubGroup Code: @Html.TextBoxFor(model => model.SubGroupCode, new { placeholder = "Sub Group Code", Class="form-control mb-2"})
                    @Html.ValidationMessageFor(model => model.SubGroupCode, "", new { Class = "error-text" })                  
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    Product Group: 
                    @Html.DropDownListFor(
                        m => m.ProductGroupID,
                        new SelectList(Model.AvailableProductGroups, "Key", "Value",Model.ProductGroupID),
                        new { @class = "form-control" } 
                    )
                    @Html.ValidationMessageFor(model => model.ProductGroupID, "", new { Class = "error-text" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    SubGroup Name: @Html.TextBoxFor(model => model.SubGroupName, new { placeholder = "Sub Group Name", Class="form-control mb-2"})
                    @Html.ValidationMessageFor(model => model.SubGroupName, "", new { Class = "error-text" })                  
                </div>
            </div>  
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    SubGroup Description: @Html.TextBoxFor(model => model.SubGroupDescription, new { placeholder = "Sub Group Name", Class="form-control mb-2"})
                    @Html.ValidationMessageFor(model => model.SubGroupDescription, "", new { Class = "error-text" })                  
                </div>
            </div>
        </div>
         <div class="row">
            <div class="col-sm-4"><button type="submit" formaction=@Url.Action("Update") formmethod="POST" class="btn btn-outline-dark btn-block mb-3">Process Update</button></div>                   
            <div class="col-sm-4"><a href="/SubGroup/Search/@Model.SubGroupID" class="btn btn-outline-dark btn-block mb-3">Back</a></button></div>
        </div>
    </form>
</div>

