@using FMASolutionsCore.Web.ShopBro
@model FMASolutionsCore.Web.ShopBro.ViewModels.CountriesViewModel
@{
    ViewData["Title"] = "Country - View All Page";
    Layout = "~/Views/Shared/_LayoutShopBro.cshtml";
}
<div class="container rounded">            
    <div class="row">
        <div class="col-sm-12">
            <div class="text-left">
                <h3>Country Details:</h3>            
            </div>        
        </div>
    </div>
</div>
<div class="container bg-light pt-2 pb-2">
    <form class="form-signin">
        @if (Model != null && Model.StatusMessage != null)
        {
            <Label class="error-text">@Model.StatusMessage </Label>
        }
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">                                    
                    <table class="table table-striped table-dark" id="DisplayAllTable">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Code</th>
                                <th>Country Name</th>
                                <th>View</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Countries)
                            {
                                <tr>
                                    <td>@(item.CountryID)</td>
                                    <td>@(item.CountryCode)</td>
                                    <td>@(item.CountryName)</td>
                                    <td><a href="/Country/Search/@item.CountryID" class="btn btn-outline-light btn-block">View</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>                
            </div>
        </div>
        <div class="col-sm-12 mt-5">
            <a href="/Country" class="btn btn-outline-dark btn-block mb-3">Back</a>
        </div>            
    </form>
</div>