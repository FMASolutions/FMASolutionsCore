@using FMASolutionsCore.Web.ShopBro
@model FMASolutionsCore.Web.ShopBro.ViewModels.CountriesViewModel
@{
    ViewData["Title"] = "Country - View All Page";
    Layout = "~/Views/Shared/_LayoutShopBro.cshtml";
}
<div class="container rounded">            
    <div class="row">
        <div class="col-sm-12">
            <div class="text-left">
                <h3>Country Details:</h3>            
            </div>        
        </div>
    </div>
</div>
<div class="container bg-light pt-2 pb-2">
    <form class="form-signin">
        @if (Model != null && Model.StatusMessage != null)
        {
            <Label class="error-text">@Model.StatusMessage </Label>
        }
        @foreach (var item in Model.Countries)
        {
            <div class="container rounded mb-3 pb-3 pt-3 bg-dark">
                <div class="row ">
                    <div class="col-sm-3 mb-2">
                        <div class="text-left">                    
                            <span class="form-control">Country ID: @item.CountryID</span>
                        </div>
                    </div>
                    <div class="col-sm-3 mb-2">
                        <div class="text-left">                    
                            <span class="form-control">Country Code: @item.CountryCode</span>
                        </div>            
                    </div>
                    <div class="col-sm-6 mb-2">
                        <div class="text-left">                    
                            <span class="form-control">Country Name: @item.CountryName</span>
                        </div>            
                    </div>
                </div>            
                <div class="row">
                    <div class="col-sm-12">      
                        <a href="/Country/Search/@item.CountryID" class="btn btn-outline-light btn-block">View</a>
                    </div>                
                </div>                         
            </div>                          
        }
        <div class="col-sm-12 mt-5">
            <a href="/Country" class="btn btn-outline-dark btn-block mb-3">Back</a>
        </div>            
    </form>
</div>