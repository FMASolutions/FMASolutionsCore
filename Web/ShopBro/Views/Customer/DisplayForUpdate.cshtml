@using FMASolutionsCore.Web.ShopBro
@model FMASolutionsCore.Web.ShopBro.ViewModels.CustomerViewModel
@{
    ViewData["Title"] = "Customer - Update Page";
    Layout = "~/Views/Shared/_LayoutShopBro.cshtml";
}

<div class="container rounded">
    <form class="form-signin">
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    <h3>Customer Details:</h3>            
                </div>        
            </div>
        </div>
        @if (Model != null && Model.StatusMessage != null)
        {
            <Label class="error-text">@Model.StatusMessage </Label>
        }
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">                    
                    Customer ID: @Html.TextBoxFor(model => model.CustomerID, new { ReadOnly="true", Class="form-control mb-2"})
                    @Html.ValidationMessageFor(model => model.CustomerID, "", new { Class = "error-text" })                  
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    Customer Code: @Html.TextBoxFor(model => model.CustomerCode, new { placeholder = "Customer Code", Class="form-control mb-2"})
                    @Html.ValidationMessageFor(model => model.CustomerCode, "", new { Class = "error-text" })                  
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    Customer Type: 
                    @Html.DropDownListFor(
                        m => m.CustomerTypeID,
                        new SelectList(Model.AvailableCustomerTypes, "Key", "Value",Model.CustomerTypeID),
                        new { @class = "form-control" } 
                    )
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    Customer Name: @Html.TextBoxFor(model => model.CustomerName, new { placeholder = "Customer Name", Class="form-control mb-2"})
                    @Html.ValidationMessageFor(model => model.CustomerName, "", new { Class = "error-text" })                  
                </div>
            </div>  
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    Contact Number: @Html.TextBoxFor(model => model.CustomerContactNumber, new { placeholder = "Customer Contact Number", Class="form-control mb-2"})
                    @Html.ValidationMessageFor(model => model.CustomerContactNumber, "", new { Class = "error-text" })                  
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    E-Mail Address: @Html.TextBoxFor(model => model.CustomerEmailAddress, new { placeholder = "Customer E-Mail Address", Class="form-control mb-2"})
                    @Html.ValidationMessageFor(model => model.CustomerEmailAddress, "", new { Class = "error-text" })                  
                </div>
            </div>
        </div>
         <div class="row">
            <div class="col-sm-4"><button type="submit" formaction=@Url.Action("Update") formmethod="POST" class="btn btn-outline-dark btn-block mb-3">Process Update</button></div>                   
            <div class="col-sm-4"><a href="/Customer/Search/@Model.CustomerID" class="btn btn-outline-dark btn-block mb-3">Back</a></button></div>
        </div>
    </form>
</div>

