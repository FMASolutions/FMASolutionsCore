@using FMASolutionsCore.Web.ShopBro
@model FMASolutionsCore.Web.ShopBro.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "ShopBro - Login";
    Layout = "~/Views/Shared/_LayoutShopBro.cshtml";
}


<div class="container rounded">
    <form class="form-signin">
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    <h3>Login</h3>            
                </div>        
            </div>
        </div>
        @if (Model != null && Model.StatusErrorMessage != null)
        {
            <Label class="error-text">@Model.StatusErrorMessage </Label>
        }
        <div class="row">
            <div class="col-sm-6">
                <div class="text-left">
                    Username @Html.TextBoxFor(model => model.Username, new { placeholder = "Username", Class="form-control mb-2"})
                    @Html.ValidationMessageFor(model => model.Username, "", new { Class = "error-text" })                  
                </div>
            </div>
             <div class="col-sm-6">
                <div class="text-left">
                    Password: @Html.PasswordFor(model => model.Password, new { placeholder = "Password", Class="form-control mb-2" })
                    @Html.ValidationMessageFor(model => model.Password, "", new { Class = "error-text" })
                </div>
            </div>  
        </div>     
        <div class="row">
            <div class="col-sm-12">
                <div class="checkbox mb-3">
                    <label><input type="checkbox" id="remember-me" value="remember-me">Stay Logged In</label>
                </div>              
            </div>
        </div>           
        <div class="row">
            <div class="col-sm-12"><button type="submit" formaction=@Url.Action("Login") formmethod="POST" class="btn btn-outline-dark btn-block mb-3">Login</button></div>
        </div>
        <div class="row">
            <div class="col-sm-6 pr-2"><a href="/UserAccount/Register" class="btn btn-outline-dark btn-block mb-3">New User</a></div>
            <div class="col-sm-6 pl-2"><a href="#" class="btn btn-outline-dark btn-block mb-4">Forgot Password</a></div>
        </div>
    </form>
</div>
