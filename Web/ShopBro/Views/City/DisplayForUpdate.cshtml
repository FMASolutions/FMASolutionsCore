@using FMASolutionsCore.Web.ShopBro
@model FMASolutionsCore.Web.ShopBro.ViewModels.CityViewModel
@{
    ViewData["Title"] = "City - Update Page";
    Layout = "~/Views/Shared/_LayoutShopBro.cshtml";
}

<div class="container rounded">
    <form class="form-signin">
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    <h3>City Details:</h3>            
                </div>        
            </div>
        </div>
        @if (Model != null && Model.StatusMessage != null)
        {
            <Label class="error-text">@Model.StatusMessage </Label>
        }
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">                    
                    City ID: @Html.TextBoxFor(model => model.CityID, new { ReadOnly="true", Class="form-control mb-2"})
                    @Html.ValidationMessageFor(model => model.CityID, "", new { Class = "error-text" })                  
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    City Code: @Html.TextBoxFor(model => model.CityCode, new { placeholder = "City Code", Class="form-control mb-2"})
                    @Html.ValidationMessageFor(model => model.CityCode, "", new { Class = "error-text" })                  
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    Country: 
                    @Html.DropDownListFor(
                        m => m.CountryID,
                        new SelectList(Model.AvailableCountries, "Key", "Value",Model.CountryID),
                        new { @class = "form-control" } 
                    )
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="text-left">
                    City Name: @Html.TextBoxFor(model => model.CityName, new { placeholder = "City Name", Class="form-control mb-2"})
                    @Html.ValidationMessageFor(model => model.CityName, "", new { Class = "error-text" })                  
                </div>
            </div>  
        </div>
         <div class="row">
            <div class="col-sm-4"><button type="submit" formaction=@Url.Action("Update") formmethod="POST" class="btn btn-outline-dark btn-block mb-3">Process Update</button></div>                   
            <div class="col-sm-4"><a href="/City/Search/@Model.CityID" class="btn btn-outline-dark btn-block mb-3">Back</a></button></div>
        </div>
    </form>
</div>

